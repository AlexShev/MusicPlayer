<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.PlayMusicActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/drop_button_play"
            android:layout_width="34dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_down_drop"
            android:background="@color/un_visible"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/music_title_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Крутое название"
                android:textAppearance="@style/title"/>

            <TextView
                android:id="@+id/music_author_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Крутой артист"/>

        </LinearLayout>

        <ImageButton
            android:layout_width="34dp"
            android:layout_height="24dp"
            android:background="@color/un_visible"/>

    </LinearLayout>

    <ViewSwitcher
        android:id="@+id/switcher_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="21dp"
        android:layout_marginVertical="45dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="432dp"
            android:src="@drawable/ic_placeholder" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="super text"/>

    </ViewSwitcher>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="24px">

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:layout_weight="1"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99:99"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/circle_button_play"
            android:layout_marginHorizontal="13dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_circle"
            android:background="@color/un_visible"/>

        <ImageButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_left_arrow"
            android:layout_marginHorizontal="13dp"
            android:background="@color/un_visible"/>

        <ImageButton
            android:id="@+id/play_pause_button_play"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_round"
            android:layout_marginHorizontal="13dp"
            android:background="@color/un_visible"/>


        <ImageButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_vector__1_"
            android:layout_marginHorizontal="13dp"
            android:background="@color/un_visible"/>

        <ImageButton
            android:id="@+id/music_like_play"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="13dp"
            android:src="@drawable/ic_love"
            android:background="@color/un_visible"/>
    </LinearLayout>



</LinearLayout>