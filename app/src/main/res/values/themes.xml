<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicPlayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/secondary_background_light</item>
        <item name="colorOnPrimary">@color/secondary_background_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/secondary_light</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/secondary_background_light</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->

        <item name="colorControlActivated">@color/secondary_light</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/secondary_background_light</item>
        <item name="colorOnPrimary">@color/secondary_background_light</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/secondary_light</item>

        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/secondary_background_light</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorControlActivated">@color/secondary_light</item>
    </style>

    <style name="Theme.MusicPlayer.NoActionBar">
        <item name="colorPrimary">@color/background_light</item>
        <item name="colorPrimaryVariant">@color/secondary_background_light</item>
        <item name="colorOnPrimary">@color/primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/secondary_light</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MusicPlayer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MusicPlayer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/font_light</item>
        <item name="android:textStyle">normal|bold</item>
    </style>

    <style name="title2">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/font_light</item>
        <item name="android:textStyle">normal|bold</item>
    </style>


    <style name="card_name">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/font_light</item>
        <item name="android:textStyle">normal|bold</item>
        <item name="android:ellipsize">end</item>

    </style>

    <style name="card_definition">
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/font_light</item>
    </style>

    <style name="button" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">12sp</item>
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="rippleColor">@color/secondary_background_light</item>
        <item name="android:backgroundTint">@color/background_light</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="textButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">12sp</item>
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="rippleColor">@color/secondary_background_light</item>
        <item name="android:backgroundTint">@color/background_light</item>
    </style>

</resources>